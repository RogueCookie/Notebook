@{
    ViewData["Title"] = "Notebook kiki";
}

<h3>Welcome to Notebook</h3>
<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--6-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="notebooks">
                <h2 class="mdl-card__title-text homeLabel">Notebook Records</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage Notebook records.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Notebook" asp-action="Index">
                    View Notebook
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--6-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="contacts">
                <h2 class="mdl-card__title-text homeLabel">Contacts</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage Contact data.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Contact" asp-action="Index">
                    View Contacts
                </a>
            </div>
        </div>
    </div>
</div>

