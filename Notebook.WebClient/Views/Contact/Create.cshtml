@model Notebook.WebClient.Models.ContactCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create new contact</h1>

<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <form asp-action="Create" class="bold-labels">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div>
                    <input asp-for="@Model.FirstName" class="form-control borderForName placeHolderBold" placeholder="First Name" />
                </div>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group text-md-right">
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btnRadius">Cancel</a>
                <input type="submit" value="Submit" class="btn btn-danger btnRadius" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/site.js"></script>
}