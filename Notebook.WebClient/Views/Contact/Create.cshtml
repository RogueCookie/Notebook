@model Notebook.WebClient.Models.ContactCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create new contact</h1>

<hr />
<div class="jumbotron">
    <div class="row">
        @*<div class="col-md-10">*@
            <form asp-action="Create" class="bold-labels">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <div>
                        <input asp-for="@Model.FirstName" class="form-control borderForName placeHolderBold" placeholder="First Name" />
                    </div>
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <input asp-for="@Model.LastName" class="form-control borderForName placeHolderBold" placeholder="Last Name" />
                    </div>
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <input asp-for="@Model.Patronymic" class="form-control borderForName placeHolderBold" placeholder="Partonymic" />
                    </div>
                    <span asp-validation-for="@Model.Patronymic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <input type="date" asp-for="@Model.BirthDate" class="form-control borderForName placeHolderBold" placeholder="Birth Date" />
                    </div>
                    <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <input asp-for="@Model.OrganizationName" class="form-control borderForName placeHolderBold" placeholder="Organization name" />
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input asp-for="@Model.Position" class="form-control borderForName placeHolderBold" placeholder="Position" />
                    </div>
                </div>
                <div>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btnRadius">Add phone</a>
                </div>
                <div class="form-group text-md-right">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btnRadius">Cancel</a>
                    <input type="submit" value="Submit" class="btn btn-danger btnRadius" />
                </div>
            </form>
        @*</div>*@
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/site.js"></script>
}